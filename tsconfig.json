{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ],
}